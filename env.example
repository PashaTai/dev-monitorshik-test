# Database configuration
DB_PATH=comments.db

# Telegram Monitor Configuration
# Get API credentials from https://my.telegram.org
TG_API_ID=12345678
TG_API_HASH=abcdef1234567890abcdef1234567890

# String Session (get via generate_session.py from monitorshik-tg)
TG_STRING_SESSION=1BVtsOJwBu7T...длинная_строка...

# Channels to monitor (comma-separated, WITHOUT @)
CHANNELS=durov,telegram

# Timezone (optional, default UTC)
TZ=Europe/Moscow

# Optional: Telegram Bot (for notifications - not required for database-only mode)
BOT_TOKEN=123456789:ABCdefGHIjklMNOpqrsTUVwxyz
ALERT_CHAT_ID=-1001234567890

# VK Monitor Configuration
# Get token from https://vk.com/apps?act=manage
# Required permissions: wall, offline
VK_ACCESS_TOKEN=your_vk_access_token_here

# VK Group/User ID or screen name to monitor
# Examples:
#   For groups: 12345678, club12345678, parfenchikov_karelia, https://vk.com/parfenchikov_karelia
#   For users: id12345, aparfenchikov, durov, https://vk.com/durov
VK_GROUP_ID=your_group_id_or_screen_name

# VK monitoring parameters (optional)
POSTS_TO_CHECK=10
COMMENTS_PER_POST=20
CHECK_INTERVAL=60
REQUEST_DELAY=0.4

# Yandex Sentiment Analysis
# Get API key and Folder ID from Yandex Cloud
YANDEX_API_KEY=your_yandex_api_key_here
YANDEX_FOLDER_ID=your_yandex_folder_id_here
SENTIMENT_INTERVAL=60

# Logging (optional)
LOG_DIR=logs

